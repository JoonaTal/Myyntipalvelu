{
  "compilerOptions": {
    "target": "ES2015",          // Update to ES2015 or higher
    "lib": ["dom", "dom.iterable", "ESNext"],  // Include ESNext or ES2015
    "allowJs": true,
    "skipLibCheck": true,        // Consider setting this to false if you need to check lib types
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "next/types"]
}